<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fbf0ef">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rock Paper Scissors"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/scrollView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="606dp"
        android:text="Made by: Angel Hamelton O. Yacapin"
        android:textColor="#160706"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/scrollView2" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="427dp"
        android:layout_height="614dp"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Player Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#cf4e3f"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvPlayerLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Player"
                    android:textColor="#160706"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Horizontal Linear Layout for Player Image -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imagePlayer"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginEnd="16dp"
                        android:contentDescription="@string/player_image"
                        android:rotationX="-182"
                        android:src="@drawable/hand_draw" />

                </LinearLayout>
            </LinearLayout>

            <!-- Computer Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#cf4e3f"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvComputerLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Computer"
                    android:textColor="#160706"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- Horizontal Linear Layout for Computer Image -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageComputer"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginEnd="16dp"
                        android:contentDescription="@string/computer_image"
                        android:src="@drawable/hand_draw" />

                </LinearLayout>
            </LinearLayout>

            <!-- Buttons Section -->

            <!-- Reset Button -->
            <LinearLayout
                android:layout_width="421dp"
                android:layout_height="70dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="16dp">

                <Button
                    android:id="@+id/btnRock"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:background="#cf4e3f"
                    android:text="@string/rock"
                    android:textColor="#160706" />

                <Button
                    android:id="@+id/btnPaper"
                    android:layout_width="136dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:background="#cf4e3f"
                    android:text="@string/paper"
                    android:textColor="#160706" />

                <Button
                    android:id="@+id/btnScissors"
                    android:layout_width="134dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:background="#cf4e3f"
                    android:text="@string/scissors"
                    android:textColor="#160706" />

            </LinearLayout>

            <Button
                android:id="@+id/btnReset"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:background="#cf4e3f"
                android:text="@string/reset"
                android:textColor="#160706" />

            <!-- Score Label -->
            <TextView
                android:id="@+id/tvScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:textColor="#160706"
                android:textSize="24sp" />

        </LinearLayout>
    </ScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="606dp"
        android:text="Made by: Angel Hamelton O. Yacapin"
        android:textColor="#160706"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/scrollView2" />
</androidx.constraintlayout.widget.ConstraintLayout>
